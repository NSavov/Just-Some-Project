<div><h4>Изберете факултет:</h4></div>
@Html.DropDownList("faculty", ViewData["faculties"] as SelectList, new { @id = "faculty" })
<select id="programmeName"></select>
<input type="submit" value="Потвърдете" onclick="javascript:SubmitClick()" />


